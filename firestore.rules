rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn()
        && exists(/databases/$(database)/documents/employees/$(request.auth.uid))
        && get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.isAdmin == true;
    }

    function isSelf(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // Settings (rates, plafonds, salaires)
    match /settings/{docId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    // Employees profiles + work logs
    match /employees/{uid} {
      allow read: if signedIn() && (isSelf(uid) || isAdmin());
      allow create: if isSelf(uid);
      // üîí Les employ√©s ne modifient pas leur fiche (grade/qualifs/contrat/etc.)
      //     Seuls les admins peuvent tout g√©rer.
      allow update: if isAdmin();
      allow delete: if isAdmin();

      match /workDays/{dayId} {
        allow read: if signedIn() && (isSelf(uid) || isAdmin());
        allow create, update: if signedIn() && (isSelf(uid) || isAdmin());
        allow delete: if isAdmin();
      }
    }

    // Public weekly leaderboard (visible to all signed-in users)
    match /weeks/{weekId}/public/{uid} {
      allow read: if signedIn();
      allow write: if signedIn() && (isSelf(uid) || isAdmin());
    }

    // Invites: readable by code (get), not listable
    match /invites/{code} {
      // Lecture d'une invite : OK si connect√© (l'inscription se fait apr√®s cr√©ation du compte)
      allow get: if request.auth != null;

      // Lister toutes les invites : admin uniquement
      allow list: if isAdmin();

      // Cr√©er une invite : admin uniquement
      allow create: if isAdmin();

      // Consommer une invite : autoris√© au nouvel employ√© SI l'invite est libre
      allow update: if isAdmin() || (
        request.auth != null &&
        (resource.data.usedBy == null) &&
      // On n'autorise √† modifier QUE ces 3 champs
        request.resource.data.diff(resource.data).changedKeys()
        .hasOnly(['usedBy', 'usedEmail', 'usedAt']) &&
        request.resource.data.usedBy == request.auth.uid &&
        request.resource.data.usedEmail == request.auth.token.email &&
        request.resource.data.usedAt is timestamp
      );

      allow delete: if isAdmin();
    }
  }
}

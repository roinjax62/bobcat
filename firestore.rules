rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn()
        && exists(/databases/$(database)/documents/employees/$(request.auth.uid))
        && get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.isAdmin == true;
    }

    function isSelf(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // Settings (rates, plafonds, salaires)
    match /settings/{docId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    // Employees profiles + work logs
    match /employees/{uid} {
      allow read: if signedIn() && (isSelf(uid) || isAdmin());
      allow create: if isSelf(uid);
      // ðŸ”’ Les employÃ©s ne modifient pas leur fiche (grade/qualifs/contrat/etc.)
      //     Seuls les admins peuvent tout gÃ©rer.
      allow update: if isAdmin();
      allow delete: if isAdmin();

      match /workDays/{dayId} {
        allow read: if signedIn() && (isSelf(uid) || isAdmin());
        allow create, update: if signedIn() && (isSelf(uid) || isAdmin());
        allow delete: if isAdmin();
      }
    }

    // Public weekly leaderboard (visible to all signed-in users)
    match /weeks/{weekId}/public/{uid} {
      allow read: if signedIn();
      allow write: if signedIn() && (isSelf(uid) || isAdmin());
    }

    // Invites: readable by code (get), not listable
    match /invites/{code} {
      allow get: if true;
      allow list: if false;

      allow create, delete: if isAdmin();

      // Mark invite as used: allow update only once by the authenticated user who uses it.
      // Also prevent changing the core invite fields.
      allow update: if signedIn()
        && resource.data.usedBy == null
        && request.resource.data.usedBy == request.auth.uid
        // keep original fields unchanged
        && request.resource.data.name == resource.data.name
        && request.resource.data.rank == resource.data.rank
        && request.resource.data.status == resource.data.status
        && request.resource.data.qualifications == resource.data.qualifications
        && request.resource.data.birth == resource.data.birth
        && request.resource.data.nationality == resource.data.nationality
        && request.resource.data.createdBy == resource.data.createdBy
        && request.resource.data.createdAt == resource.data.createdAt;
    }
  }
}

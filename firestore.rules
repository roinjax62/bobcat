rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn()
        && exists(/databases/$(database)/documents/employees/$(request.auth.uid))
        && get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.isAdmin == true;
    }

    function isDirector() {
      return isAdmin() && get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.rank == "Directeur";
    }

    function isSelf(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // Settings (rates, plafonds, salaires)
    match /settings/{docId} {
      allow read: if signedIn();
      allow write: if isDirector();
    }

    // Employees profiles + work logs
    match /employees/{uid} {
      allow read: if signedIn() && (isSelf(uid) || isAdmin());
      allow create: if isSelf(uid);
      // ðŸ”’ Les employÃ©s ne modifient pas leur fiche (grade/qualifs/contrat/etc.)
      //     Seuls les admins peuvent tout gÃ©rer.
      allow update: if isAdmin();
      allow delete: if isAdmin();

      match /workDays/{dayId} {
        allow read: if signedIn() && (isSelf(uid) || isAdmin());
        allow create, update: if signedIn() && (isSelf(uid) || isAdmin());
        allow delete: if isAdmin();
      }
    }

    // Public weekly leaderboard (visible to all signed-in users)
    match /weeks/{weekId}/public/{uid} {
      allow read: if signedIn();
      allow write: if signedIn() && (isSelf(uid) || isAdmin());
    }

    // Invites: readable by code (get), not listable
    match /invites/{code} {
      // Lecture d'un code (doc unique) : autorisÃ© mÃªme sans Ãªtre connectÃ©
      allow get: if true;

      // Compat : certaines versions ont besoin d'une requÃªte (where('code'==...)).
      // On autorise les requÃªtes UNIQUEMENT pour les utilisateurs connectÃ©s, et seulement si la requÃªte est trÃ¨s limitÃ©e.
      // (Ã‰vite l'Ã©numÃ©ration massive.)
      allow list: if signedIn()
        && request.query.limit != null
        && request.query.limit <= 1
        && (request.query.offset == null || request.query.offset == 0);

      allow create, delete: if isAdmin();

      // Marquer un code comme "utilisÃ©" : une seule fois, par l'utilisateur qui s'inscrit.
      // Seuls les champs usedBy/usedEmail/usedAt sont modifiables.
      allow update: if signedIn()
        && (resource.data.usedBy == null)
        && request.resource.data.usedBy == request.auth.uid
        && request.resource.data.diff(resource.data).changedKeys().hasOnly(['usedBy','usedEmail','usedAt']);
    }
  }
}
